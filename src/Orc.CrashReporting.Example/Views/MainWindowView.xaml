<catel:Window x:Class="Orc.CrashReporting.Example.MainWindowView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:catel="http://catel.codeplex.com"
        Title="Orc.CrashLogCrashReporting Example"
        Height="120" Width="560">

    <StackPanel HorizontalAlignment="Center">
        <Button Content="Throw Exception" Command="{Binding ThrowException}" VerticalAlignment="Center" Width="200" Margin="6"/>
        <Button Content="Throw Exception in Task" Command="{Binding ThrowExceptionInTask}" VerticalAlignment="Center" Width="200" Margin="6"/>
    </StackPanel>

</catel:Window>
